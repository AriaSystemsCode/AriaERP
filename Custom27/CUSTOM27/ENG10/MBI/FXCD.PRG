    REPLACE COWNER WITH 'NADER'
    SELECT 2
    APPEN BLANK
    GATHER MEMVAR MEMO
  ENDIF
ENDSCAN
SELECT 1
DELE ALL FOR COWNER ='NADER'
APPEND FROM CODE1
CLOSE ALL
ERASE CODE1.DBF