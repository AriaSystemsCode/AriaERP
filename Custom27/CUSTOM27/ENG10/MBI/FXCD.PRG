CLOSE ALL
USE DBFS\01\CODES ORDER CCODE_NO IN 1
COPY STRU TO CODE1
USE CODE1 IN 2
SELECT 1
=SEEK('NCCHRGCODE')
SCAN WHILE CDEFCODE+CFLD_NAME='NCCHRGCODE'
  IF CRLTD_NAM='CFRGTACNT'
